<%= simple_form_for @book, :html => {  multipart: true	} do |f| %>
	<%= select_tag(:book_category_id, options_for_select(@book_categories), :prompt => "Select a Category" ) %><br><br>
	<%= f.file_field :book_img %><br>
	<%= f.input :title, label: "Book Title" %>
	<%= f.input :author %>
	<%= f.input :description %>
	<%= f.button :submit %>
<% end -%>