<h1>Edit Book</h1>

<%= simple_form_for @book, :html => {  multipart: true	} do |f| %>
	<%= f.select :book_category_id, @book_categories %><br><br>
	<%= f.file_field :book_img %><br>
	<%= f.input :title, label: "Book Title" %>
	<%= f.input :author %>
	<%= f.input :description %>
	<%= f.button :submit %>
<% end -%>