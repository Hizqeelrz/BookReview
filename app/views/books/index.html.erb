<% if @books.count == 0 %>
	<h1>"There are no Books to be available for this Category"</h1>
<% else %>
	<div class="row">
		<% @books.each do |book| %>
			<div class="col-md-3">
				<a href="/books/<%= book.id %>">
					<%= image_tag book.book_img.url(:book_index), class: "book" %>
				</a>
			</div>
		<% end -%>
	<% end -%>
	</div>